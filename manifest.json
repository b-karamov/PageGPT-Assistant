{
  "manifest_version": 3,
  "name": "PageGPT Assistant",        
  "version": "0.1",
  "description": "Анализ веб-страниц (саммари, план, подсветка ключевых идей) через ChatGPT API",
  "icons": {
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://api.openai.com/*",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
